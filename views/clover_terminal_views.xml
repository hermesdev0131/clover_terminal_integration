<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- Clover Terminal : Form                                       -->
    <!-- ============================================================ -->
    <record id="clover_terminal_view_form" model="ir.ui.view">
        <field name="name">clover.terminal.form</field>
        <field name="model">clover.terminal</field>
        <field name="arch" type="xml">
            <form string="Clover Terminal">
                <header>
                    <button name="action_authorize"
                            type="object"
                            string="Authorize"
                            class="btn-warning"
                            invisible="token_acquired or state == 'active'"
                            help="Open Clover OAuth page to acquire API token"/>
                    <button name="action_test_connection"
                            type="object"
                            string="Test Connection"
                            class="btn-primary"
                            invisible="state == 'active'"/>
                    <button name="action_activate"
                            type="object"
                            string="Activate"
                            class="btn-success"
                            invisible="state not in ('testing', 'error', 'inactive')"/>
                    <button name="action_deactivate"
                            type="object"
                            string="Deactivate"
                            invisible="state != 'active'"
                            confirm="Deactivate this terminal?"/>
                    <button name="action_reset_draft"
                            type="object"
                            string="Reset"
                            invisible="state in ('draft', 'inactive')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,testing,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_view_payment_methods"
                                icon="fa-credit-card"
                                invisible="payment_method_count == 0">
                            <field name="payment_method_count" widget="statinfo"
                                   string="Payment Methods"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"
                                   placeholder='e.g. "Front Counter Flex 4"'/>
                        </h1>
                    </div>
                    <group>
                        <group string="Clover Configuration">
                            <field name="environment"/>
                            <field name="merchant_id"
                                   placeholder="e.g. 24TRB7DSZNKK1"/>
                            <field name="device_serial"
                                   placeholder="e.g. C046LT52640523"/>
                            <field name="app_id"
                                   placeholder="e.g. R9126BVSN0JYY"/>
                            <field name="raid"
                                   placeholder="e.g. 4YFRTCTS6SMFT.R9126BVSN0JYY"/>
                        </group>
                        <group string="Authentication">
                            <field name="app_secret" password="True"/>
                            <field name="api_token" password="True"/>
                            <field name="token_acquired" widget="boolean"
                                   invisible="1"/>
                        </group>
                    </group>
                    <group invisible="state == 'draft'">
                        <group string="Device Info">
                            <field name="merchant_name"/>
                            <field name="device_model"/>
                            <field name="clover_device_id"/>
                            <field name="last_ping"/>
                            <field name="company_id"
                                   groups="base.group_multi_company"/>
                        </group>
                        <group string="Diagnostics"
                               invisible="not last_error">
                            <field name="last_error" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Clover Terminal : List                                       -->
    <!-- ============================================================ -->
    <record id="clover_terminal_view_tree" model="ir.ui.view">
        <field name="name">clover.terminal.tree</field>
        <field name="model">clover.terminal</field>
        <field name="arch" type="xml">
            <list string="Clover Terminals">
                <field name="name"/>
                <field name="environment" widget="badge"
                       decoration-info="environment == 'sandbox'"
                       decoration-success="environment in ('production_na', 'production_eu', 'production_la')"/>
                <field name="merchant_id"/>
                <field name="device_serial"/>
                <field name="device_model" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'testing'"
                       decoration-danger="state == 'error'"/>
                <field name="last_ping" optional="show"/>
                <field name="company_id" groups="base.group_multi_company"
                       optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Clover Terminal : Search                                     -->
    <!-- ============================================================ -->
    <record id="clover_terminal_view_search" model="ir.ui.view">
        <field name="name">clover.terminal.search</field>
        <field name="model">clover.terminal</field>
        <field name="arch" type="xml">
            <search string="Clover Terminals">
                <field name="name"/>
                <field name="merchant_id"/>
                <field name="device_serial"/>
                <filter name="active_terminals" string="Active"
                        domain="[('state', '=', 'active')]"/>
                <filter name="sandbox" string="Sandbox"
                        domain="[('environment', '=', 'sandbox')]"/>
                <filter name="production" string="Production"
                        domain="[('environment', 'in', ('production_na', 'production_eu', 'production_la'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status"
                            context="{'group_by': 'state'}"/>
                    <filter name="group_env" string="Environment"
                            context="{'group_by': 'environment'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Clover Terminal : Window Action                              -->
    <!-- ============================================================ -->
    <record id="action_clover_terminal" model="ir.actions.act_window">
        <field name="name">Clover Terminals</field>
        <field name="res_model">clover.terminal</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your first Clover terminal
            </p>
            <p>
                Add your Clover Flex 4 device with Merchant ID,
                Device Serial, App ID, App Secret, and RAID from the
                Clover Developer Dashboard. Click <b>Authorize</b> to
                acquire the API token, then <b>Test Connection</b>.
            </p>
        </field>
    </record>

</odoo>
